{
  "manifest_version": 2,

  "name":        "ProjectHub",
  "author":         "Gavin Elster",
  "description": "Adds useful filters to your GitHub project board",
  "version":     "0.0.0.2",

  "options_ui": {
    "page":         "options.html",
    "chrome_style": true
  },

  "content_scripts": [
    {
      "matches": [ "https://*.github.com/*/*/projects/*"],
      "css":     ["app.bundle.css"],
      "js":      ["app.bundle.js"],
      "run_at":  "document_end"
    }
  ],

  "minimum_chrome_version": "42",

  "permissions": [
    "storage"
  ]
}
